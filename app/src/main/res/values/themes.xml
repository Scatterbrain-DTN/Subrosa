<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <attr name="toolbarPadding">50dp</attr>
    <style name="Theme.Subrosa" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
        <item name="android:navigationBarDividerColor">@color/purple_700</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Subrosa.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionModeOverlay">@bool/mb_wide_layout</item>
        <item name="android:statusBarColor">@color/purple_700</item>
        <item name="android:navigationBarColor">@color/purple_700</item>
        <item name="android:navigationBarDividerColor">@color/purple_700</item>
    </style>

    <style name="Transparent" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="actionMenuTextColor">@color/teal_200</item>
        <item name="android:windowBackground">?android:attr/colorBackground</item>
    </style>

</resources>